<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100F0F"
    android:orientation="vertical"
    tools:context=".PremiumAppActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="8dp"
        app:cardCornerRadius="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/icons_round"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/andika_new_basic"
        android:text="Take Your Experience To The Next Level With CritiX Premium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#38DBDB"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#21DBDB"
                android:text="Monthly"
                android:textAlignment="center"
                android:padding="35dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#21DBDB"
                android:text="Rs. 199/month"
                android:textAlignment="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#38DBDB"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#21DBDB"
                android:text="Annually"
                android:textAlignment="center"
                android:padding="35dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#21DBDB"
                android:text="Rs. 999/year"
                android:textAlignment="center"
                android:textStyle="normal"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>